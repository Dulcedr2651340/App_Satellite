<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Examen02" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/bg_button</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">#8858DD</item>
        <item name="colorOnPrimary">@color/color1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">#EB424242</item>
        <item name="android:itemTextAppearance">@style/ChangeTextColor</item>
        <item name="android:queryHint">@style/queryHintStyle</item>
    </style>

    <style name="labelStyle">
        <item name="android:background">@drawable/bg_label</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="queryHintStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color1</item>
    </style>

    <style name="ChangeTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/color1</item>
    </style>
</resources>